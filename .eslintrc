{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "plugin:flowtype/recommended",
    "plugin:lodash-fp/recommended"
  ],
  "ecmaFeatures": {
    "jsx": true
  },
  "env": {
    "es6": true
  },
  "plugins": [
    "babel",
    "flowtype",
    "lodash-fp",
    "no-use-extend-native",
    "promise",
    "react",
    "react-native"
  ],
  "globals": {
    "__DEV__": true,
    "alert": false,
    "fetch": false,
    "window": false,

    "ReactElement": false,
    "ReactClass": false
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "rules": {
    "array-bracket-spacing": 0,
    "arrow-parens": [2, "always"],
    "class-methods-use-this": 0,
    "generator-star-spacing": 0,
    "global-require": 0,
    "max-len": [1, 80],
    "new-cap": 0,
    "no-console": 0,
    "no-multiple-empty-lines": [1, { "max": 1 }],
    "no-underscore-dangle": 0,
    "no-unused-expressions": [1, { "allowShortCircuit": true }],
    "no-use-before-define": 0,

    "babel/array-bracket-spacing": [2, "never"],
    "babel/func-params-comma-dangle": [2, "always-multiline"],
    "babel/generator-star-spacing": [2, { "before": false, "after": true }],
    "babel/new-cap": [2, { "newIsCap": true }],
    "babel/no-await-in-loop": 2,

    "flowtype/delimiter-dangle": [2, "always-multiline"],

    "import/order": [1, {
      "groups": [
        "builtin",
        "external",
        "internal",
        ["parent", "sibling", "index"]
      ],
      "newlines-between": "always"
    }],

    "no-use-extend-native/no-use-extend-native": 0,

    "promise/always-return": 2,
    "promise/catch-or-return": 2,
    "promise/param-names": 2,

    "react/jsx-boolean-value": [2, "never"],
    "react/jsx-curly-spacing": [2, "never", { "allowMultiline": true }],
    "react/jsx-closing-bracket-location": [1, "tag-aligned"],
    "react/jsx-equals-spacing": [2, "never"],
    "react/jsx-first-prop-new-line": [2, "multiline"],
    "react/jsx-handler-names": [2, {
      "eventHandlerPrefix": "_?handle",
      "eventHandlerPropPrefix": "on"
    }],
    "react/jsx-indent": [2, 2],
    "react/jsx-indent-props": [2, 2],
    "react/jsx-key": 2,
    "react/jsx-max-props-per-line": [2, { "maximum": 3 }],
    "react/jsx-no-bind": [2, {
      "ignoreRefs": true,
      "allowArrowFunctions": true,
      "allowBind": false
    }],
    "react/jsx-no-comment-textnodes": 2,
    "react/jsx-no-duplicate-props": [2, { "ignoreCase": false }],
    "react/jsx-no-undef": 2,
    "react/jsx-pascal-case": [2, {
      "allowAllCaps": true,
      "ignore": []
    }],
    "react/jsx-space-before-closing": [2, "always"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-wrap-multilines": [2, {
      "declaration": true,
      "assignment": true,
      "return": true
    }],

    "react/no-children-prop": 2,
    "react/no-did-mount-set-state": [2, "disallow-in-func"],
    "react/no-did-update-set-state": [2, "disallow-in-func"],
    "react/no-direct-mutation-state": 2,
    "react/no-is-mounted": 2,
    "react/no-multi-comp": [2, { "ignoreStateless": true }],
    "react/no-string-refs": 2,
    "react/no-unescaped-entities": 2,
    "react/prefer-es6-class": [2, "always"],
    "react/prefer-stateless-function": 2,
    "react/prop-types": 2,
    "react/react-in-jsx-scope": 2,
    "react/require-render-return": 2,
    "react/self-closing-comp": 2,
    "react/sort-comp": [1, {
      "order": [
        "type-annotations",
        "static-methods",
        "lifecycle",
        "/^on.+$/",
        "/^(get|set)(?!(InitialState$|DefaultProps$|ChildContext$)).+$/",
        "everything-else",
        "/^render.+$/",
        "render"
      ]
    }],

    "react-native/no-unused-styles": 2,
    "react-native/split-platform-components": 2,
    "react-native/no-inline-styles": 2
  }
}
